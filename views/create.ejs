<%- include("partials/header") -%>


<div class="container">

<main class="col-6">

    <form action="/create" method="POST" class="row" >
        <div class="personal-information">
            <div class="title-information"><h3>Crear producto</h3></div>
             
      
 
       <div class="col-6">

           <div class="form-label mt-2" >
            <input type="text" name="name" placeholder="Nombre del producto" value="<%= locals.oldData ? oldData.image : null %>">
            
            <% if (locals.errors && errors.name) {%> 
                <div class="text-danger">
                  <%= errors.name.msg %> 
                </div>
                <% } %>        
        </div>
        <div class="brand-main">

            <div class="form-label">
             <select name="brand" class="form-select" > 
                <% for ( let i = 0 ; i < brand.length ; i++ ) { %>
                <option value="<%= brand[i].id%>"> 
                        <%= brand[i].name %> 
                </option>
                     
                
                <% } %> 
             </select>

             <div class="form-label">
                <select name="color" class="form-select" > 
                   <% for ( let i = 0 ; i < color.length ; i++ ) { %>
                   <option value="<%= color[i].id%>"> 
                           <%= color[i].name %> 
                   </option>
                   <% } %> 
                </select>
                
            <div class="form-label">
                <select name="material" class="form-select"  > 
                    <% for ( let i = 0 ; i < material.length ; i++ ) { %>
                    <option value="<%= material[i].id%>"> 
                               <%= material[i].name %> 
                    </option>
                    <% } %> 
                    </select>
            <div class="precio">

                <div  class="form-label">
                <input type="text" name="price" placeholder="valor" class="form-label" value="<%= locals.oldData ? oldData.name : null %>">
                <% if (locals.errors && errors.price) {%> 
                    <div class="text-danger">
                      <%= errors.price.msg %> 
                    </div>
                    <% } %>     
            </div>        
            <div class="descripcion">

                <div class="descripcion-link" id="descripcion" name="descripcion" class="form-label">
                <input type="text" id="descripcion" name="descripcion" placeholder="descripcion" class="form-label" value="<%= locals.oldData ? oldData.name : null %>">
                  <% if (locals.errors && errors.descripcion) {%> 
                    <div class="text-danger">
                      <%= errors.descripcion.msg %> 
                    </div>
                    <% } %>     
                    

            </div>   
            <div class="precio">

                <div  class="form-label">
                <input type="text" name="url" placeholder="url de tu imagen" class="form-label" value="<%= locals.oldData ? oldData.name : null %>">
                <% if (locals.errors && errors.url) {%> 
                    <div class="text-danger">
                      <%= errors.url.msg %> 
                    </div>
                    <% } %>     
            </div>                       
          
         </div>
         <button type="submit" class="btn btn-primary" > Crear Producto </button>
    </div>
</div>
<%- include("partials/footer") -%>


